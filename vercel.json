{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "includeFiles": [
          "requirements.txt",
          "models.py",
          "routes/**",
          "templates/**",
          "static/**"
        ],
        "buildCommand": "pip install --no-build-isolation -r requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "DEBUG": "False"
  }
}