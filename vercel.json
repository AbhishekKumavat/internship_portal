{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "includeFiles": [
          "requirements.txt",
          "models.py",
          "routes/**",
          "templates/**",
          "static/**"
        ],
        "excludeFiles": [
          "frontend/**",
          "*.md",
          "docs/**",
          "tests/**",
          "*.sql",
          "Dockerfile*",
          "docker-compose.yml",
          "nginx.conf",
          "render.yaml"
        ],
        "buildCommand": "pip install --no-build-isolation --no-cache-dir -r requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "DEBUG": "False"
  },
  "build": {
    "env": {
      "FLASK_ENV": "production",
      "DEBUG": "False"
    }
  }
}