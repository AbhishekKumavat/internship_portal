{
  "version": 2,
  "builds": [
    {
      "src": "minimal_app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "includeFiles": [
          "minimal_app.py",
          ".env"
        ],
        "excludeFiles": [
          "frontend/**",
          "*.md",
          "docs/**",
          "tests/**",
          "*.sql",
          "Dockerfile*",
          "docker-compose.yml",
          "nginx.conf",
          "render.yaml",
          "app.py",
          "routes/**",
          "models.py",
          "requirements.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "minimal_app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "DEBUG": "False"
  },
  "build": {
    "env": {
      "FLASK_ENV": "production",
      "DEBUG": "False"
    }
  }
}